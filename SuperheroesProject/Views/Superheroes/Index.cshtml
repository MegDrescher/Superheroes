@model IEnumerable<SuperheroesProject.Models.Superhero>

@{
    ViewBag.Title = "Index";
}

<h2>Superheroes!</h2>
<div>
<center>
<img src="~/Content/images.jpg"/>
</center>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlterEgoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatchPhrase)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlterEgoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondaryAbility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatchPhrase)
        </td>
       
        <td>
            @Html.ActionLink("Edit this Superhero", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete this Superhero", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
